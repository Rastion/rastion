{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Job-Shop Scheduling Instance",
  "type": "object",
  "required": ["machines", "jobs"],
  "properties": {
    "machines": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "jobs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["operations"],
        "properties": {
          "operations": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["machine", "duration"],
              "properties": {
                "machine": { "type": "string" },
                "duration": { "type": "integer", "minimum": 1 }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
