{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Set Cover Instance",
  "$id": "https://example.com/dmps/set-cover-basic/instance.schema.json",
  "type": "object",
  "required": [
    "universe",
    "sets"
  ],
  "properties": {
    "universe": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "uniqueItems": true,
      "description": "Elements that must be covered by selected sets."
    },
    "sets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "elements",
          "cost"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "elements": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
          },
          "cost": {
            "type": "number",
            "minimum": 0
          }
        },
        "additionalProperties": false
      },
      "description": "Available sets to choose from."
    }
  },
  "additionalProperties": false
}
